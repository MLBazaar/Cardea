{
    "name": "skimage.feature.hog",
    "author": "Carles Sala <carles@pythiac.com>",
    "documentation": "http://scikit-image.org/docs/dev/api/skimage.feature.html#skimage.feature.hog",
    "description": "Extract Histogram of Oriented Gradients (HOG) for a given image.",
    "classifiers": {
        "type": "preprocessor",
        "subtype": "feature_extractor"
    },
    "modalities": ["image"],
    "primitive": "mlprimitives.adapters.skimage.hog",
    "produce": {
        "args": [
            {
                "name": "X",
                "type": "ndarray"
            }
        ],
        "output": [
            {
                "name": "X",
                "type": "ndarray"
            }
        ]
    },
    "hyperparameters": {
        "fixed": {
            "multichannel": {
                "type": "bool",
                "default": false,
                "description": "If True, the last image dimension is considered as a color channel, otherwise as spatial."
            },
            "visualize": {
                "type": "bool",
                "default": false
            }
        },
        "tunable": {
            "orientations": {
                "type": "int",
                "default": 9,
                "range": [
                    1,
                    10
                ]
            },
            "pixels_per_cell_x": {
                "type": "int",
                "default": 8,
                "range": [
                    4,
                    16
                ]
            },
            "pixels_per_cell_y": {
                "type": "int",
                "default": 8,
                "range": [
                    4,
                    16
                ]
            },
            "cells_per_block_x": {
                "type": "int",
                "default": 3,
                "range": [
                    1,
                    5
                ]
            },
            "cells_per_block_y": {
                "type": "int",
                "default": 3,
                "range": [
                    1,
                    5
                ]
            },
            "block_norm": {
                "type": "str",
                "default": null,
                "values": [
                    "L1",
                    "L1-sqrt",
                    "L2",
                    "L2-Hys"
                ]
            }
        }
    }
}
