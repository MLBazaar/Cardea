{
    "name": "sklearn.feature_extraction.text.CountVectorizer",
    "contributors": [
        "Carles Sala <csala@csail.mit.edu>"
    ],
    "documentation": "http://scikit-learn.org/stable/modules/generated/sklearn.feature_extraction.text.CountVectorizer.html",
    "description": "Convert a collection of text documents to a matrix of token counts",
    "classifiers": {
        "type": "preprocessor",
        "subtype": "feature_extractor"
    },
    "modalities": [
        "text"
    ],
    "primitive": "sklearn.feature_extraction.text.CountVectorizer",
    "fit": {
        "method": "fit",
        "args": [
            {
                "name": "X",
                "keyword": "raw_documents",
                "type": "array"
            },
            {
                "name": "y",
                "type": "ndarray"
            }
        ]
    },
    "produce": {
        "method": "transform",
        "args": [
            {
                "name": "X",
                "keyword": "raw_documents",
                "type": "array"
            }
        ],
        "output": [
            {
                "name": "y",
                "type": "ndarray"
            }
        ]
    },
    "hyperparameters": {
        "FIXME": "This needs to be reviewed",
        "fixed": {
            "input": {
                "type": "str",
                "default": "content"
            },
            "encoding": {
                "type": "str",
                "default": "utf-8"
            },
            "decode_error": {
                "type": "str",
                "default": "strict"
            },
            "lowercase": {
                "type": "bool",
                "default": true
            },
            "ngram_range": {
                "type": "list",
                "default": [
                    1,
                    1
                ]
            },
            "analyzer": {
                "type": "str",
                "default": "word"
            },
            "binary": {
                "type": "bool",
                "default": false
            }
        },
        "tunable": {
            "max_features": {
                "type": "int",
                "default": 1000,
                "range": [
                    10,
                    40000
                ]
            },
            "max_df": {
                "type": "float",
                "default": 1.0,
                "range": [
                    0.0,
                    1.0
                ]
            },
            "min_df": {
                "type": "float",
                "default": 1.0,
                "range": [
                    0.0,
                    1.0
                ]
            }
        }
    }
}
